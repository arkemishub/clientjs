{
  "name": "@arkejs/client",
  "version": "2.8.0",
  "description": "An isomorphic JavaScript client for Arke backend connection.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm clean && tsup",
    "clean": "rm -rf dist",
    "test": "jest --coverage --silent",
