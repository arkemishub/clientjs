    "pub:release": "pnpm build && pnpm publish --access public"
  },
  "keywords": [
    "arke",
    "client"
  ],
  "author": "Arkemis S.r.l.",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.1",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arkemishub/client.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
